{
  "mcpServers": {
    "yaraflux-mcp-server": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "--env",
        "JWT_SECRET_KEY=your-secret-key",
        "--env",
        "ADMIN_PASSWORD=your-admin-password",
        "--env",
        "DEBUG=true",
        "--env",
        "PYTHONUNBUFFERED=1",
        "yaraflux-mcp-server:latest"
      ],
      "timeout": 1200,
      "disabled": false,
      "autoApprove": [
        "scan_url",
        "scan_data",
        "get_yara_rule",
        "add_yara_rule",
        "validate_yara_rule",
        "get_hex_view",
        "upload_file",
        "list_yara_rules"
      ],
      "pipeMode": "binary"
    }
  }
}
